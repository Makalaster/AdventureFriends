<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding"
    tools:context="com.makalaster.adventurefriends.player.pages.EquipmentPageFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hat"/>

    <TextView
        android:id="@+id/hat_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/hat_name_and_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/equipment_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shirt"/>

    <TextView
        android:id="@+id/shirt_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/shirt_name_and_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/equipment_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/boots"/>

    <TextView
        android:id="@+id/boots_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/boots_name_and_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/equipment_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weapon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weapon_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/range"/>

        <TextView
            android:id="@+id/weapon_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/weapon_name_and_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
